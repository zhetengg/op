#
# Target
#
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_EFI_IMAGES=y

#
# LuCI base + Argon theme
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-base=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-theme-argon=y

#
# Firewall (nftables)
#
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_nftables-json=y

#
# OpenClash
#
CONFIG_PACKAGE_luci-app-openclash=y

#
# AdGuardHome (precompiled binary)
#
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_luci-i18n-adguardhome-zh-cn=y
CONFIG_PACKAGE_luci-app-adguardhome_INCLUDE_binary=y

#
# Dockerman UI only
#
CONFIG_PACKAGE_luci-app-dockerman=y
CONFIG_PACKAGE_luci-i18n-dockerman-zh-cn=y
# CONFIG_PACKAGE_docker is not set
# CONFIG_PACKAGE_dockerd is not set
# CONFIG_PACKAGE_containerd is not set
# CONFIG_PACKAGE_runc is not set

#
# Disk & mount management
#
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-i18n-diskman-zh-cn=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_lsblk=y
CONFIG_PACKAGE_mount-utils=y

#
# Samba-lite for network share
#
CONFIG_PACKAGE_samba4-server-lite=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-i18n-samba4-zh-cn=y

#
# UDPXY
#
CONFIG_PACKAGE_udpxy=y
CONFIG_PACKAGE_luci-app-udpxy=y
CONFIG_PACKAGE_luci-i18n-udpxy-zh-cn=y

#
# System utilities
#
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_xz=y
CONFIG_PACKAGE_xz-utils=y
CONFIG_PACKAGE_htop=y

#
# Build options
#
CONFIG_DEBUG_INFO=n
