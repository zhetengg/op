# 目标平台保持不变
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# 加密库精简，只留 mbedtls + gnutls（删 legacy openssl）
# CONFIG_PACKAGE_libopenssl-legacy=y
CONFIG_PACKAGE_libmbedtls=y
CONFIG_MBEDTLS_AES_C=y
CONFIG_MBEDTLS_CMAC_C=y
CONFIG_MBEDTLS_DES_C=y
CONFIG_MBEDTLS_ECP_DP_CURVE25519_ENABLED=y
CONFIG_MBEDTLS_ECP_DP_SECP256K1_ENABLED=y
CONFIG_MBEDTLS_ECP_DP_SECP256R1_ENABLED=y
CONFIG_MBEDTLS_ECP_DP_SECP384R1_ENABLED=y
CONFIG_MBEDTLS_ENTROPY_FORCE_SHA256=y
CONFIG_MBEDTLS_GCM_C=y
CONFIG_MBEDTLS_KEY_EXCHANGE_ECDHE_ECDSA_ENABLED=y
CONFIG_MBEDTLS_KEY_EXCHANGE_ECDHE_PSK_ENABLED=y
CONFIG_MBEDTLS_KEY_EXCHANGE_ECDHE_RSA_ENABLED=y
CONFIG_MBEDTLS_KEY_EXCHANGE_PSK_ENABLED=y
CONFIG_MBEDTLS_NIST_KW_C=y
CONFIG_MBEDTLS_RSA_NO_CRT=y
CONFIG_PACKAGE_libgnutls=y
CONFIG_GNUTLS_ALPN=y
CONFIG_GNUTLS_ANON=y
CONFIG_GNUTLS_DTLS_SRTP=y
CONFIG_GNUTLS_HEARTBEAT=y
CONFIG_GNUTLS_OCSP=y
CONFIG_GNUTLS_PSK=y

# 防火墙全 nftables，删 iptables
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables-json=y
# CONFIG_PACKAGE_firewall=m
# CONFIG_PACKAGE_iptables-mod-conntrack-extra=m
# CONFIG_PACKAGE_iptables-mod-fullconenat=m
# CONFIG_PACKAGE_kmod-ipt-conntrack-extra=m
# CONFIG_PACKAGE_kmod-ipt-fullconenat=m
# CONFIG_PACKAGE_kmod-ipt-physdev=y

# Docker 核心保留，compose 可选删
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_dockerd=y
CONFIG_PACKAGE_containerd=y
CONFIG_PACKAGE_runc=y
CONFIG_PACKAGE_tini=y
CONFIG_PACKAGE_libseccomp=y
CONFIG_DOCKER_CGROUP_OPTIONS=y
CONFIG_DOCKER_NET_MACVLAN=y
CONFIG_DOCKER_OPTIONAL_FEATURES=y
CONFIG_DOCKER_STO_EXT4=y
CONFIG_PACKAGE_cgroupfs-mount=y
CONFIG_CGROUPFS_MOUNT_KERNEL_CGROUPS=y
CONFIG_PACKAGE_libseccomp=y

# aria2 轻量版（关 BT，省资源）
CONFIG_PACKAGE_aria2=y
CONFIG_ARIA2_OPENSSL=y
CONFIG_ARIA2_WEBSOCKET=y
CONFIG_ARIA2_NOXML=y
# CONFIG_ARIA2_BITTORRENT=y  # 关掉

# 核心代理和分流（OpenClash 为主）
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_mosdns=y
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_dns2socks=y
CONFIG_PACKAGE_microsocks=y
CONFIG_PACKAGE_tcping=y

# 存储与共享
